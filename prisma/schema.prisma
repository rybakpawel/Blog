generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Article {
    id              String      @id @default(auto()) @map("_id") @db.ObjectId
    title           String
    mainImage       String
    content         String
    category        Category
    createdDate     DateTime    @default(now())
    
    author          User        @relation(fields: [authorId], references: [id])
    authorId        String      @db.ObjectId

    comments        Comment[]
}

model User {
    id              String      @id @default(auto()) @map("_id") @db.ObjectId
    email           String      @unique
    username        String      @unique
    password        String
    firstName       String?
    lastName        String?
    registerDate    DateTime
    lastLogin       DateTime?
    role            Role        @default(Guest)

    articles        Article[]
    comments        Comment[]
}

model Comment {
    id              String      @id @default(auto()) @map("_id") @db.ObjectId
    content         String
    createdDate     DateTime    @default(now())
    guestName       String?
    guestEmail      String?

    author          User?       @relation(fields: [authorId], references: [id])
    authorId        String?     @db.ObjectId
    article         Article     @relation(fields: [articleId], references: [id])
    articleId       String      @db.ObjectId
}

model ContactMessage {
    id              String      @id @default(auto()) @map("_id") @db.ObjectId
    email           String
    name            String
    content         String
}

enum Category {
    DIY
    Music
    Programming
    Projects
    SelfDevelopment
    Sports
}

enum Role {
    SuperAdmin
    User
    Guest
}